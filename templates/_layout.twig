<script>
    $(document).ready(function(){
        $('#showJson').click(function(){
            console.log($('#showJson').text()); 
            // if JSON is hidden show json and change text of span
            if( $('#showJson').text() == "Show JSON") {
                $('#json').show();
                $('#showJson').text('Hide JSON');
            } else {
                $('#json').hide();
                $('#showJson').text('Show JSON');
            }
        });
    });
</script> 


